<h1>Editing Book</h1>

<%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class= "field">
   <label for = "book_title">本のタイトル</label>
   <%= f.text_field :title %>
  </div>
  
  <div class= "field">
   <label for = "book_title">感想</label>
   <%= f.text_area :body %>
  </div>
 
  <div class = "actions">
   <%= f.submit "Update Book"  %>
  </div>
  
  <%= link_to "Show", book_path(@book.id) %>
 |
  <%= link_to "Back", books_path %>

  
  
<% end %>